<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.death.face.ResultActivity">

        <RelativeLayout
            android:background="@color/colorPrimary"
            android:id="@+id/indicator_controller"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/download"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="4dp"
                app:show_text="true" />

            <LinearLayout
                android:background="@color/colorPrimary"
                android:id="@+id/angerC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.github.yongjhih.mismeter.MisMeter
                    android:id="@+id/anger"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:show_text="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Anger"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/colorPrimary"
                android:id="@+id/hapiness_C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/profile_image"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.github.yongjhih.mismeter.MisMeter
                    android:id="@+id/happiness"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:show_text="true" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Hapiness"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/colorPrimary"
                android:id="@+id/contempt_C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/angerC"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.github.yongjhih.mismeter.MisMeter
                    android:id="@+id/contempt"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:show_text="true" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Contempt"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/colorPrimary"
                android:id="@+id/fear_C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/hapiness_C"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.github.yongjhih.mismeter.MisMeter
                    android:id="@+id/fear"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:show_text="true" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Fear"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/colorPrimary"
                android:id="@+id/disgust_C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/fear_C"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.github.yongjhih.mismeter.MisMeter
                    android:id="@+id/disgust"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:show_text="true" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Disgust"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/colorPrimary"
                android:id="@+id/surprise_C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/contempt_C"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.github.yongjhih.mismeter.MisMeter
                    android:id="@+id/surprise"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:show_text="true" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Surprise"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/colorPrimary"
                android:id="@+id/sadness_C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/disgust_C"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.github.yongjhih.mismeter.MisMeter
                    android:id="@+id/sadness"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:show_text="true" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Sadness"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/colorPrimary"
                android:id="@+id/neutral_C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/surprise_C"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.github.yongjhih.mismeter.MisMeter
                    android:id="@+id/neutral"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:show_text="true" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Neutral"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />
            </LinearLayout>



        </RelativeLayout>
    </RelativeLayout>
</ScrollView>